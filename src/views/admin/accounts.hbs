<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
</head>

<body>

    <div class="w-full text-center">
        <h1 class="font-bold text-blue-800 text-3xl">Admin Panel</h1>
    </div>
    {{!-- <div class="w-full text-center py-4">
        <h1>Total Ammount <br>{{totalBalance}}</h1>
    </div> --}}
    <div class="px-2 py-4 bg-gray-200 flex justify-between space-y-4">
        <div></div>
        <a href="/accounts" class="bg-white p-4 font-semibold  hover:bg-black hover:text-white duration-100">Accounts
            Requests</a>
        <a href="/payments" class="bg-white p-4 font-semibold  hover:bg-black hover:text-white duration-100">Payment
            Requests</a>
        <a href="/donepayments" class="bg-white p-4 font-semibold  hover:bg-black hover:text-white duration-100">Done
            Payments </a>


    </div>

    <div class="w-full text-center">
        <h1 class="font-bold text-gray-800 text-3xl">Account Requests</h1>
    </div>
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-2xl font-bold mb-4">Verify User</h1>
    <table class="min-w-full bg-white border border-gray-300">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b">Phone</th>
          <th class="py-2 px-4 border-b">Email</th>
          <th class="py-2 px-4 border-b">Actions</th>
          <!-- Add other column headers as needed -->
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr class="">
            <td class="py-2 px-4 border-b">{{buyerphone}}</td>
            <td class="py-2 px-4 border-b">{{email}}</td>
            <td class="py-2 px-4 border-b">
              <form action="/change-status" method="post">
                <input type="hidden" name="userId" value="{{_id}}">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">
                  Allow
                </button>
              </form>
            </td>
            <!-- Add other fields as needed -->
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>


</body>

</html>